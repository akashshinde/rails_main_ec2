<h1>Listing bhks</h1>
<table>
  <thead>
    <tr>
      <th>Hall size</th>
      <th>Bed size</th>
      <th>Kitchen size</th>
      <th>Size</th>
      <th>Floor</th>
      <th>Sold out</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Transaction</th>
    </tr>
  </thead>
  <tbody>
  <% unless @flats.nil? %>
    <% @flats.each do |bhk| %>
      <tr>
        <td><%= bhk.hall_size %></td>
        <td><%= bhk.kitchen_size %></td>
        <td><%= bhk.floor %></td>
        <td><%= bhk.sold_out %></td>
        <td><%= bhk.status %></td>
        <td><%= link_to 'Show', bhk %></td>
        <td><%= link_to 'Edit', edit_flat_path(bhk) %></td>
        <td><%= link_to 'Destroy', bhk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
        <td></td>
        <% if bhk.sold_out %>
        <td><%= link_to 'Make Transaction', new_transaction_path(:id=> bhk.id,:balance_amount => bhk.balance_amount) %></td>
        <% else %>
        <td><%= link_to 'Sell', new_transaction_path(:id=> bhk.id,:balance_amount=> bhk.balance_amount) %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
   <% end -%>
</table>

<br>

